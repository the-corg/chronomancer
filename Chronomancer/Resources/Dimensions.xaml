<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:sys="clr-namespace:System;assembly=netstandard">

    <sys:Double x:Key="MinAreaButtonHeightWithoutMargins">24</sys:Double>
    <sys:Double x:Key="MaxAreaButtonHeightWithoutMargins">64</sys:Double>
    <!-- Recommended: Add 2 to the previous value -->
    <sys:Double x:Key="MaxAreaButtonHeightWithMargins">66</sys:Double>

    <Thickness x:Key="OuterBorder" Left="16" Right="16" Top="0" Bottom="0"/>

    <sys:Double x:Key="InnerMargin">12</sys:Double>
    <Thickness x:Key="InnerMarginUniform" Left="{StaticResource InnerMargin}" Top="{StaticResource InnerMargin}" Right="{StaticResource InnerMargin}" Bottom="{StaticResource InnerMargin}"/>
    <Thickness x:Key="InnerMarginHorizontal" Left="{StaticResource InnerMargin}" Top="0" Right="{StaticResource InnerMargin}" Bottom="0"/>
    <Thickness x:Key="InnerMarginWithoutTop" Left="{StaticResource InnerMargin}" Top="0" Right="{StaticResource InnerMargin}" Bottom="{StaticResource InnerMargin}"/>

    <sys:Double x:Key="InputTimeBarTextFontSize">22</sys:Double>
    <sys:Double x:Key="InputTimeBarControlFontSize">24</sys:Double>
    <sys:Double x:Key="InputTimeBarControlHeight">38</sys:Double>
    
</ResourceDictionary>