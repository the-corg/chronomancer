<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    
    <Style x:Key="KeyboardShortcutButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource KeyboardShortcutBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource KeyboardShortcutForeground}"/>
        <Setter Property="Padding" Value="6 2"/>
    </Style>
    
</ResourceDictionary>